<?xml version="1.0" encoding="UTF-8"?>
<AssignmentRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <assignmentRule>
        <fullName>Budget Based Lead Assignment Rule</fullName>
        <active>true</active>
        <ruleEntry>
            <assignedTo>Partner_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.Estimated_Budget__c</field>
                <operation>greaterOrEqual</operation>
                <value>1000000</value>
            </criteriaItems>
            <template>Lead_POC/Budget_Based_Lead_Assignment_Notification</template>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>Prolifics_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.Estimated_Budget__c</field>
                <operation>lessThan</operation>
                <value>1000000</value>
            </criteriaItems>
            <template>Lead_POC/Budget_Based_Lead_Assignment_Notification</template>
        </ruleEntry>
    </assignmentRule>
    <assignmentRule>
        <fullName>PropertyType_Assignment_Rule</fullName>
        <active>false</active>
        <ruleEntry>
            <assignedTo>Residential_Sales_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.Property_Type__c</field>
                <operation>equals</operation>
                <value>Residential</value>
            </criteriaItems>
            <template>Demo_Email_Template/Internal_New_Lead_Assigned</template>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>Commercial_Sales_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.Property_Type__c</field>
                <operation>equals</operation>
                <value>Commercial</value>
            </criteriaItems>
            <template>Demo_Email_Template/Internal_New_Lead_Assigned</template>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>Others_Sales_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.Property_Type__c</field>
                <operation>notEqual</operation>
                <value>Residential,Commercial</value>
            </criteriaItems>
        </ruleEntry>
    </assignmentRule>
