        <ruleEntry>
            <assignedTo>America_Region_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.Region__c</field>
                <operation>equals</operation>
                <value>America</value>
            </criteriaItems>
            <template>Demo_Email_Template/Lead_Assignment</template>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>Asia_Region_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.Region__c</field>
                <operation>equals</operation>
                <value>Asia</value>
            </criteriaItems>
            <template>Demo_Email_Template/Lead_Assignment</template>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>Europe_Region_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.Region__c</field>
                <operation>equals</operation>
